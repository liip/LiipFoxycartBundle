<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="liip_foxycart.twig.extension" class="Liip\FoxycartBundle\Twig\TwigExtension">
            <argument type="service" id="liip_foxycart.cart_validation"/>
            <tag name="twig.extension"/>
        </service>

        <service id="liip_foxycart.cart_validation" class="Liip\FoxycartBundle\CartValidation">
            <argument>%liip_foxycart.cart_url%</argument>
            <argument>%liip_foxycart.api_key%</argument>
        </service>

    </services>
</container>
